{
  "name": "Inquiry",
  "type": "object",
  "properties": {
    "listing_id": {
      "type": "string",
      "description": "Reference to listing"
    },
    "investor_id": {
      "type": "string",
      "description": "Reference to investor"
    },
    "seller_id": {
      "type": "string",
      "description": "Reference to seller"
    },
    "subject": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "new",
        "read",
        "responded",
        "closed"
      ],
      "default": "new"
    },
    "response": {
      "type": "string"
    },
    "response_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "listing_id",
    "investor_id",
    "message"
  ]
}