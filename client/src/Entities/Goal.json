{
  "name": "Goal",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Reference to user"
    },
    "target_amount": {
      "type": "number",
      "description": "Total investment goal amount in USD"
    },
    "timeline_months": {
      "type": "number",
      "description": "Investment timeline in months"
    },
    "risk_tolerance": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "default": "medium",
      "description": "Risk tolerance level"
    },
    "preferred_categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Preferred investment categories"
    },
    "preferred_types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Preferred investment types"
    },
    "min_roi": {
      "type": "number",
      "description": "Minimum acceptable ROI percentage"
    },
    "max_investment_per_opportunity": {
      "type": "number",
      "description": "Maximum to invest in single opportunity"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "paused",
        "completed"
      ],
      "default": "active"
    }
  },
  "required": [
    "user_id",
    "target_amount",
    "timeline_months"
  ]
}